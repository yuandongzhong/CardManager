<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical" >


    <co.bankoo.patrick.cardmanager.Controllers.TitleBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/password_change_edit_old"
        style="@style/form_text_edit_style"
        android:hint="旧密码"
        />

    <EditText
        android:id="@+id/password_change_edit_new"
        style="@style/form_text_edit_style"
        android:hint="新密码"
        />

    <EditText
        android:id="@+id/password_change_edit_confirm"
        style="@style/form_text_edit_style"
        android:hint="新密码"
        />

    <Button
        android:id="@+id/password_change_button_confirm"
        style="@style/button_confirm_style"
        android:text="修改密码" />

</LinearLayout>